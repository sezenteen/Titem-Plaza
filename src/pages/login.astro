---
import Header from "../components/header.astro";
import Footer from "../components/footer.astro";
import '../styles/global.css';
---

<!DOCTYPE html>
<html lang="mn">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Нэвтрэх - Титэм Плаза</title>
</head>
<body class="bg-white text-black">
    <Header />

    <nav class="bg-[#5E60CE] text-white p-4 md:hidden">
        <ul class="flex justify-around">
            <li><a href="/" class="bg-[#7C83FD] text-white px-4 py-2 rounded-md font-semibold">Нүүр хуудас</a></li>
            <li><a href="/about" class="bg-[#7C83FD] text-white px-4 py-2 rounded-md font-semibold">Бидний тухай</a></li>
            <li><a href="#contact" class="bg-[#7C83FD] text-white px-4 py-2 rounded-md font-semibold">Холбоо барих</a></li>
        </ul>
    </nav>
    
    <main class="container mx-auto px-4 py-10 flex justify-center">
        <div class="bg-gray-100 shadow-lg rounded-lg p-8 w-full max-w-md">
            <h1 class="text-3xl font-bold text-center text-[#5E60CE] mb-6">Нэвтрэх</h1>
            
            <form action="/auth/login" method="POST" class="space-y-6">
                <div>
                    <label for="email" class="block text-[#5E60CE] font-medium">Имэйл</label>
                    <input type="email" id="email" name="email" required 
                           class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#5E60CE] focus:outline-none">
                </div>

                <div>
                    <label for="password" class="block text-[#5E60CE] font-medium">Нууц үг</label>
                    <input type="password" id="password" name="password" required 
                           class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#5E60CE] focus:outline-none">
                </div>

                <button type="submit" class="w-full bg-[#5E60CE] text-white font-medium py-2 rounded-lg hover:bg-[#7C83FD] transition">
                    Нэвтрэх
                </button>

                <p class="text-center text-gray-700 mt-4">
                    <a href="/register" class="text-[#5E60CE] hover:underline">Бүртгүүлэх</a> |
                    <a href="/forgot-password" class="text-[#5E60CE] hover:underline">Нууц үг мартсан</a>
                </p>
            </form>
        </div>
    </main>
    
    <Footer />
</body>
</html>
