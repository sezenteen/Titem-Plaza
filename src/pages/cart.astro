---
import Header from "../components/header.astro";
import Footer from "../components/footer.astro";
import Icons from "../components/icons.astro";

import './src/styles/global.css';

const cartItems = [
    { id: 1, name: "Ном", price: 25000, quantity: 1 },
    { id: 2, name: "Притерийн хор", price: 45000, quantity: 2 },
    { id: 3, name: "Жааз, уран зураг", price: 60000, quantity: 1 }
];

const totalPrice = cartItems.reduce((sum, item) => sum + item.price * item.quantity, 0);
---

<!DOCTYPE html>
<html lang="mn">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Таны Сагс</title>
</head>
<body class="bg-gray-50 bg-cover bg-center h-screen w-full text-[#003375]">
    <Header />
    
    <main class="container mx-auto px-4 py-10">
        
        <div class="bg-gray-100 shadow-lg rounded-lg p-6">
            <h1 class="mt-2 text-4xl font-bold text-center mb-10">Таны Сагс</h1>
            <table class="w-full rounded-lg text-[#003375]">
            <thead class="bg-gray-200 text-[#003375] border rounded-lg">
                <tr class="bg-[#] text-[#003375] border rounded-lg">
                <th class="p-3 text-left">Барааны нэр</th>
                <th class="p-3 text-center">Тоо ширхэг</th>
                <th class="p-3 text-right">Үнэ</th>
                <th class="p-3 text-right">Нийт</th>
                <th class="p-3 text-center">Үйлдэл</th>
                </tr>
            </thead>
            <tbody>
                {cartItems.map((item) => (
                <tr key={item.id} class="border-b border-gray-200">
                    <td class="p-3">{item.name}</td>
                    <td class="p-3 text-center">{item.quantity}</td>
                    <td class="p-3 text-right">{item.price}₮</td>
                    <td class="p-3 text-right">{item.price * item.quantity}₮</td>
                    <td class="p-3 text-center">
                    <button class="bg-gray-200 text-[#003375] px-3 py-1 rounded hover:bg-[#003375] hover:text-white">Хасах</button>
                    </td>
                </tr>
                ))}
            </tbody>
            </table>
            
            <div class="text-right mt-6">
            <p class="text-lg font-semibold mb-4">Нийт үнэ: {totalPrice}₮</p>
            <button class="bg-gray-200 text-[#003375] px-6 py-2 rounded text-lg font-semibold hover:bg-[#003375] hover:text-white">Төлбөр төлөх</button>
            </div>
        </div>
    </main>

    <Icons />
    
    <Footer />
</body>
</html>
