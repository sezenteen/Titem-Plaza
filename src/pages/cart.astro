---
import Header from "../components/header.astro";
import Footer from "../components/footer.astro";
import './src/styles/global.css';

const cartItems = [
    { id: 1, name: "Ном", price: 25000, quantity: 1 },
    { id: 2, name: "Притерийн хор", price: 45000, quantity: 2 },
    { id: 3, name: "Жааз, уран зураг", price: 60000, quantity: 1 }
];
---

<!DOCTYPE html>
<html lang="mn">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Таны Сагс</title>
</head>
<body class="bg-gray-100">
    <Header />
    
    <main class="container mx-auto px-4 py-10">
        <h1 class="text-4xl font-bold text-center text-gray-600 mb-10">Таны Сагс</h1>
        
        <div class="bg-white shadow-md rounded-lg p-6">
            <table class="w-full border-collapse">
                <thead>
                    <tr class="bg-gray-200">
                        <th class="p-3 text-left">Барааны нэр</th>
                        <th class="p-3 text-center">Тоо ширхэг</th>
                        <th class="p-3 text-right">Үнэ</th>
                        <th class="p-3 text-right">Нийт</th>
                        <th class="p-3 text-center">Үйлдэл</th>
                    </tr>
                </thead>
                <tbody>
                    {cartItems.map((item) => (
                        <tr key={item.id} class="border-b">
                            <td class="p-3">{item.name}</td>
                            <td class="p-3 text-center">{item.quantity}</td>
                            <td class="p-3 text-right">{item.price}₮</td>
                            <td class="p-3 text-right">{item.price * item.quantity}₮</td>
                            <td class="p-3 text-center">
                                <button class="bg-gray-700 text-white px-3 py-1 rounded">Хасах</button>
                            </td>
                        </tr>
                    ))}
                </tbody>
            </table>
            
            <div class="text-right mt-6">
                <button class="bg-purple-900 text-white px-6 py-2 rounded text-lg mr-12">Төлбөр төлөх</button>
            </div>
        </div>
    </main>
    
    <Footer />
</body>
</html>
