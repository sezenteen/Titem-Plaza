---
import Header from "../components/header.astro";
import Footer from "../components/footer.astro";

---

<!DOCTYPE html>
<html lang="mn">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Таны Хэтэвч</title>
</head>
<body class="bg-[#5E60CE] text-white">
    <Header />

    <nav class="bg-[#5E60CE] text-white p-4 md:hidden">
        <ul class="flex justify-around">
            <li><a href="/" class="bg-[#7C83FD] text-white px-4 py-2 rounded-md font-semibold">Нүүр хуудас</a></li>
            <li><a href="/about" class="bg-[#7C83FD] text-white px-4 py-2 rounded-md font-semibold">Бидний тухай</a></li>
            <li><a href="#contact" class="bg-[#7C83FD] text-white px-4 py-2 rounded-md font-semibold">Холбоо барих</a></li>
        </ul>
    </nav>

    <main class="container mx-auto px-4 py-10">
        <h1 class="text-4xl font-bold text-center mb-10">Таны Хэтэвч</h1>

        <div class="bg-[#7C83FD] shadow-lg rounded-lg p-6">
            <table class="w-full border-collapse text-white">
                <thead>
                    <tr class="bg-[#5E60CE]">
                        <th class="p-3 text-left">Дансны үлдэгдэл</th>
                        <th class="p-3 text-right">Сагс</th>
                        <th class="p-3 text-right">Нийт</th>
                        <th class="p-3 text-center">Гүйлгээ</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>

            <div class="text-right mt-6">
                <button class="bg-white text-[#5E60CE] px-6 py-2 rounded text-lg mr-12 font-semibold">Данс цэнэглэх</button>
            </div>
        </div>
    </main>
    <Footer />
</body>
</html>
