---
import './src/styles/global.css';
---

<meta charset="UTF-8" />
<style>
    @import url('https://fonts.googleapis.com/css2?family=Mak+Optima&display=swap');

    body {
        font-family: 'Mak Optima', sans-serif;
        margin: 0;
        padding: 0;
    }
</style>
<div id="header" class="header bg-[#003375] font-sans text-white px-4 py-2"
    x-data="{ menuOpen: false, isSticky: false, lastScroll: 0, isScrollingDown: false }"
    @scroll.window="isSticky = window.scrollY> 50;isScrollingDown = window.scrollY > lastScroll;lastScroll = window.scrollY;
    " :class="{'shadow-md': isSticky}" x-cloak>

    <!-- Top Header -->
    <div class="first-header hidden md:flex flex-col md:flex-row justify-between items-center text-white text-sm font-medium border-b-2 border-[#0055AA] py-2">
        <div class="flex justify-start items-center w-full md:w-auto">
            <h1 class="text-lg font-bold text-center md:text-left">Титэмд тавтай морил</h1>
        </div>
        <ul class="hidden md:flex flex-col md:flex-row gap-2 md:gap-4 text-center md:text-left w-full md:w-auto bg-[#0055AA] md:bg-transparent p-3 md:p-0 rounded md:rounded-none">
            <li><a href="#contact" class="hover:text-gray-300">Хамтран ажиллах</a></li>
            <li><a href="#contact" class="hover:text-gray-300">Тусламж</a></li>
        </ul>
    </div>

    <!-- Main Header (Now Sticky & Hides Hamburger on Scroll Down) -->
    <div class="second-header flex flex-col md:flex-row p-5 items-center text-center w-full bg-[#003375] z-50 transition-all duration-300"
        :class="{'fixed top-0 left-0 w-full shadow-md py-3': isSticky, 'relative': !isSticky}">

        <div class="flex justify-between items-center w-full md:w-auto mb-2 md:mb-3 mt-5 md:mt-3">
            <div class="flex items-center gap-3">
                <img src="/src/assets/titem_white.png" alt="Титэм Плаза" class="logo mx-3 h-16 md:h-24 w-18 md:w-26">
                <div class="third-header flex items-center bg-white px-4 py-2 rounded-lg mx-5 md:w-auto mt-2 md:mt-3">
                    <input type="text" placeholder="Хайх" class="bg-transparent outline-none px-2 text-black w-full md:w-64">
                    <button class="bg-[#0055AA] text-white px-4 py-1 rounded-lg hover:bg-[#f7941e]">Хайх</button>
                </div>
            </div>
            <!-- Mobile Hamburger Button (Hidden When Scrolling Down) -->
            <button class="md:hidden block text-white text-2xl transition-opacity duration-300 hover:text-gray-300"
                @click="menuOpen = !menuOpen" 
                :class="{'opacity-0 pointer-events-none': isScrollingDown}">
                ☰
            </button>
        </div>

        <!-- Desktop Menu -->
        <div class="hidden md:flex w-full md:w-auto mt-3 md:mt-0 md:ml-auto">
            <ul class="flex flex-col md:flex-row justify-center md:justify-end gap-2 md:gap-4 mr-5 md:mr-0">
                <li><a href="/wallet" class="hover:text-gray-300">Хэтэвч</a></li>
                <li><a href="#" class="hover:text-gray-300">Үзсэн</a></li>
                <li><a href="#" class="hover:text-gray-300">Хадгалсан</a></li>
                <li><a href="/cart" class="hover:text-gray-300">Сагс</a></li>
                <li><a href="/login" class="hover:text-gray-300">Нэвтрэх</a></li>
            </ul>
        </div>
    </div>

    <!-- Mobile Menu -->
    <div x-show="menuOpen" x-transition class="bg-[#0055AA] text-white flex flex-col py-3 px-5 rounded-md mt-2 md:hidden">
        <ul class="flex flex-col items-center font-medium gap-3">
            <li><a href="/wallet" class="hover:text-gray-300">Хэтэвч</a></li>
            <li><a href="#" class="hover:text-gray-300">Үзсэн</a></li>
            <li><a href="#" class="hover:text-gray-300">Хадгалсан</a></li>
            <li><a href="/about" class="hover:text-gray-300">Бидний тухай</a></li>
            <li><a href="#contact" class="hover:text-gray-300">Хамтран ажиллах</a></li>
            <li><a href="#contact" class="hover:text-gray-300">Холбоо барих</a></li>
        </ul>
    </div>

    <!-- Navigation -->
    <div id="nav" class="nav bg-[#0055AA] mt-4 py-3 font-medium rounded-md hidden md:block">
        <nav class="flex flex-col md:flex-row justify-between items-center px-4">
            <div x-data="{ open: false }" class="relative w-full md:w-auto text-center">
                <button @click="open = !open" class="category text-white px-4 py-2 md:py-0 justify-start hover:text-gray-300">Ангилал</button>
                <ul x-show="open" x-transition @mouseleave="open = false" class="absolute left-0 md:left-auto mt-2 bg-white text-[#003375] rounded shadow-lg w-full md:w-64">
                    <li><a href="#" class="block px-4 py-2 hover:bg-gray-200">Үзэг, Харандаа</a></li>
                    <li><a href="#" class="block px-4 py-2 hover:bg-gray-200">Дэвтэр</a></li>
                    <li><a href="#" class="block px-4 py-2 hover:bg-gray-200">Цаас, цаасан бүтээгдэхүүн</a></li>
                    <li><a href="#" class="block px-4 py-2 hover:bg-gray-200">Уран зургийн хэрэгсэл</a></li>
                    <li><a href="#" class="block px-4 py-2 hover:bg-gray-200">Электрон төхөөрөмж</a></li>
                    <li><a href="#" class="block px-4 py-2 hover:bg-gray-200">Шагнал, Сертификатын хэрэгсэл</a></li>
                </ul>
            </div>
            <ul class="hidden md:flex flex-col md:flex-row gap-3 md:gap-5 mt-3 md:mt-0 text-center md:text-left justify-start w-full md:w-auto">
                <li><a href="/" class="text-white block px-4 py-2 md:py-0 hover:text-gray-300">Нүүр хуудас</a></li>
                <li><a href="/about" class="text-white block px-4 py-2 md:py-0 hover:text-gray-300">Бидний тухай</a></li>
                <li><a href="#contact" class="text-white block px-4 py-2 md:py-0 hover:text-gray-300">Холбоо барих</a></li>
                <li><a href="#contact" class="text-white block px-4 py-2 md:py-0 hover:text-gray-300">Хаяг</a></li>
            </ul>
        </nav>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js" defer></script>
